
   <button class="dark-mode-toggle" id="darkModeToggle">
    <i class="fas fa-moon"></i>
  </button>
  <div class="particles" id="particles"></div>
  <div class="login-container">
    <div class="card">
      <div class="card-body text-center">
        <div class="logo-wrapper">
          <div class="logo-container">
            <img src="/img/logos/logo.png" alt="Logo de la empresa" class="logo-img">
          </div>
        </div>
        <div class="title-container">
          <h2>Ingresar</h2>
          <span class="title-decoration"></span>
        </div>
        <% if (error) { %>
          <div class="alert alert-danger animate-shake" role="alert" id="errorMessage">
            <i class="fas fa-exclamation-circle me-2"></i><%= error %>
          </div>
        <% } %>
        <form action="/moduleTask" method="POST" autocomplete="off" class="text-start" id="loginForm">
          <div class="form-floating mb-3">
            <input type="text" class="form-control" id="username" name="username" placeholder="Usuario" required autocomplete="off">
            <label for="username"><i class="fas fa-user me-2"></i>Usuario</label>
          </div>
          <div class="form-floating mb-3 position-relative">
            <input type="password" class="form-control" id="password" name="password" placeholder="Contraseña" required autocomplete="off">
            <label for="password"><i class="fas fa-lock me-2"></i>Contraseña</label>
            <button type="button" class="password-toggle" id="togglePassword" tabindex="-1">
              <i class="fas fa-eye"></i>
            </button>
          </div>
          
          <div class="d-grid mb-3">
            <button type="submit" class="btn btn-primary" id="submitButton">
              <div class="spinner"></div>
              <span><i class="fas fa-sign-in-alt me-2"></i>Ingresar</span>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
